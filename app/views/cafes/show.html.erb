<!-- 카페 정보 ㄴㄴ -->
<!-- 카페에 등록된 글 ㅇㅇ-->
<h1><%=@cafe.title %></h1>
<p><%= @cafe.description %></p>

<% #unless @cafe.is_member?(current_user) %>
<!-- 카페가입버튼 -->
<%= link_to '가입하기', join_cafe_path(@cafe), method: 'POST', class:'btn btn-warning text-white'%>
<% #end %>

<ul class="list-group">
  <% @cafe.posts.each do |post| %> <!-- 카페에 속해있는 포스트들-->
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to "#{post.title}", post_path(post) %> <!--'rake routes'의 prefix이용해서 지정(prefix_path) -->
    <span class="badge badge-primary badge-pill"><%= post.comments.count %></span>
  </li>
  <% end %>
</ul>

<!-- 새글 등록버튼 -->
<%= link_to '새글 쓰기', new_post_path(cafe_id: @cafe.id), class: 'btn btn-info'%>
