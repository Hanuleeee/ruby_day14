<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr/>

<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<p>
  <strong>ImagePath:</strong>
  <img src="<%= @post.image_path %>" width="100%" />
</p>

<p>
  <strong>Thumb Fill:</strong>
  <img src="<%= @post.image_path.thumb_fi11.url %>" />
</p>

<p>
  <strong>Thumb Fit:</strong>
  <img src="<%= @post.image_path.thumb_fit.url %>"/>
</p>

<%= link_to '수정', edit_post_path(@post), class: 'btn btn-warning text-white' %> |
<%= link_to '목록', cafe_path(@post.daum_id), class: 'btn btn-info'  %> | <!-- (@post.daum) daum객체가 나옴...??-->
<%= link_to '삭제', post_path, class: 'btn btn-danger', method: 'DELETE', data: {confirm: "삭제하시겠습니까?"} %>
<hr>
<!-- 댓글 입력-->
<%= render 'comments/form', post: @post %>
<br>
<!--댓글 리스트 -->
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Content</th></th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td> <%= comment.content %><small><%=comment.updated_at %></small></td>
      <td><%=link_to "삭제", "/comments/#{comment.id}",method: "DELETE" ,class: "btn btn-warning"%></td>
    </tr>
    <% end %>
  </tbody>
</table>